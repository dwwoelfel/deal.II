#
# GNUmakefile has priority over Makefile for GNU Make.
# So if a Makefile was generated by CMake due to an in-source configure
# chain-load it:
#
ifneq ($(wildcard Makefile),)
  include Makefile
else
  default:
endif


steps:= $(wildcard step-*)

.PHONY: configure_examples
configure_examples: $(steps:%=%/Makefile)

%/Makefile:
	-cd $(@D) && cmake . > /dev/null 2>&1

.PHONY: run_examples
run_examples: $(steps:%=%/Output)

%/Output: %/Makefile
	cd $(@D) && if [ -f Makefile ]; then make run; fi > Output 2>&1
