#!/usr/bin/perl -p
s/\\p\{([^}]+)\}/$1/g;
s/\@p\{([^}]+)\}/$1/g;
s/\\ref\{([^}]+)\}/$1/g;
s/\@ref\{([^}]+)\}/$1/g;
s/\@item/<li>/g;
#s/\@sect3\{([^}]+)\}/\@subsubsection $1/g;
s/\\begin\{verbatim\}/\@verbatim/g;
s/\\end\{verbatim\}/\@endverbatim/g;
s/\@begin\{verbatim\}/\@verbatim/g;
s/\@end\{verbatim\}/\@endverbatim/g;

s/\\begin\{itemize\}/<UL>/g;
s/\\end\{itemize\}/<\/UL>/g;
s/\@begin\{itemize\}/<UL>/g;
s/\@end\{itemize\}/<\/UL>/g;

s/\\begin\{enumerate\}/<OL>/g;
s/\\end\{enumerate\}/<\/OL>/g;
s/\@begin\{enumerate\}/<OL>/g;
s/\@end\{enumerate\}/<\/OL>/g;
#s/\\end\{verbatim\}/\@endverbatim/g;
