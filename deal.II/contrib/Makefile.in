# $Id$
# Makefile for the /contrib subdirectory

include ../common/Make.global_options


# by default make sublibs
default: hsl umfpack functionparser


ifeq ($(USE_CONTRIB_HSL),yes)
hsl:
	cd hsl ; $(MAKE)

hsl-clean:
	cd hsl ; $(MAKE) clean
else
hsl:
hsl-clean:
endif


ifeq ($(USE_CONTRIB_UMFPACK),yes)
umfpack:
	cd umfpack ; $(MAKE)
else
umfpack:
endif


functionparser:
	@cd functionparser ; $(MAKE)


# generic targets
clean: hsl-clean

.PHONY: default hsl clean umfpack functionparser
